# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'

gem "middleman", "~>3.3.2"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# Middleman Image File Optimization
  # Necessary Optimization Binaries
    # Debian/Ubuntu - sudo apt-get install -y advancecomp gifsicle jhead jpegoptim libjpeg-progs optipng pngcrush
    # RHEL/Fedora/Centos - sudo yum install -y advancecomp gifsicle jhead libjpeg optipng
      # You may need other binaries - if so => https://github.com/toy/image_optim
gem 'image_optim' 
gem "middleman-imageoptim"

# Favicon Generator
gem "middleman-favicon-maker"